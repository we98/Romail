<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_sender"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="@id/img_sender"
        app:layout_constraintBottom_toBottomOf="@id/img_sender"
        app:layout_constraintStart_toStartOf="@id/img_sender"
        app:layout_constraintEnd_toEndOf="@id/img_sender"/>

    <TextView
        android:id="@+id/tv_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_sender"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:maxLines="1"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginLeft="8dp"
        android:text="leetcode交流群通知"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="19/04/30"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sender"
        app:layout_constraintLeft_toRightOf="@id/img_sender"
        app:layout_constraintBottom_toTopOf="@id/tv_content"
        android:textColor="#000000"
        app:layout_constraintWidth_percent="0.5"
        android:maxLines="1"
        android:layout_marginLeft="8dp"
        android:text="Daily LeetCode Notice"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_sender"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:text="Today Rank Rank User ID Solved 1rauthy5 2we980 3h"/>

</android.support.constraint.ConstraintLayout>